{
  "name": "alien-empires-bot",
  "version": "1.0.0",
  "description": "full-stack version of Space Empires: 4x alien empires management app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client-install": "npm install --prefix client",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jon-Varner/alien-empires-bot.git"
  },
  "author": "Jon Varner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Jon-Varner/alien-empires-bot/issues"
  },
  "homepage": "https://github.com/Jon-Varner/alien-empires-bot#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.0",
    "mongoose": "^5.4.15",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "nodemon": "^1.18.10"
  }
}
